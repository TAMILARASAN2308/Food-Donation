        }
let foodCount=1;
        function incrementCount() {

            foodCount++;
            document.getElementById('food-need-count').textContent = foodCount;
            
        }

        function decrementCount() {
            if (foodCount > 1) {
                foodCount--;
                document.getElementById('food-need-count').textContent = foodCount;
            }
        }
function showCheckFood() {
        document.getElementById('showCard').style.display = 'flex';
        document.getElementById('check-food-section').style.display = 'block';
        document.getElementById('request-food-section').style.display = 'none';
        document.getElementById('load-food-section').style.display = 'none';

        fetchFoodDetails(); // Fetch food details when this section is shown
    }

    function checkFoodDetails() {
            const foodId = document.getElementById('food-id-check').value;

            fetch(`/food-details/${foodId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Food item not found');
                    }
                    return response.json();
                })
                .then(data => {
                    renderFoodDetails(data); // Render the fetched data
                })
                .catch(error => {
                    console.error('Error fetching food details:', error);
                    alert('Food item not found');
                });
        }

        function renderFoodDetails(food) {
            const foodDetailsContainer = document.getElementById('food-details-table');
            foodDetailsContainer.innerHTML = `
                <h2>Food Name: ${food.food_name}</h2>
                <p>Cooked Timing: ${food.cooked_timing}</p>
                <p>Expiry Timing: ${food.expiry_timing}</p>
            `;
        }

    </script>
</body>
</html>

 